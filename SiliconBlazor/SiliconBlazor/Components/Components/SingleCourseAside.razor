<aside class="mt-3 mb-5 course-includes border">
    <div class="container">
        <h4>This course includes:</h4>
        <div class="content mt-3">
            <div class="item">
                <div class="item-icon">
                    <i class="fa-sharp fa-regular fa-video"></i>
                </div>
                <div class="item-content">
                    <p>@Course?.Hours hours on-demand video</p>
                </div>
            </div>

            @if (Course?.Content != null)
            {
                @foreach (var include in Course.Content)
                {
                    <div class="item">
                        @if (Course != null)
                        {
                            <div class="item-icon">
                                <i class="fa-sharp fa-light fa-newspaper"></i>
                            </div>
                            <div class="item-content">
                                <p>@Course.Article articles</p>
                            </div>
                        }

                        @if (Course?.Resource != null)
                        {
                            <div class="item-icon">
                                <i class="fa-sharp fa-light fa-download"></i>
                            </div>
                            <div class="item-content">
                                <p>@Course.Resource downloadable resources</p>
                            </div>
                        }

                        <div class="item-icon">
                            <i class="fa-solid fa-hourglass"></i>
                        </div>
                        <div class="item-content">
                            @if (Course?.Access == true)
                            {
                                <p>Full lifetime access</p>
                            }
                        </div>

                        <div class="item-icon">
                            <i class="fa-duotone fa-file-certificate"></i>
                        </div>
                        <div class="item-content">
                            @if (Course?.Certificate == true)
                            {
                                <p>Certificate of completion</p>
                            }
                        </div>
                    </div>
                }
            }
        </div>

        <div class="pricing">
            @if (!string.IsNullOrEmpty(Course?.DiscountPrice))
            {
                <div class="discount">@Course.DiscountPrice</div>
            }
            <div class="price @(string.IsNullOrEmpty(Course?.DiscountPrice) ? "" : "discount-enabled")">@Course?.Price</div>
        </div>

        <button type="submit" class="mt-3 btn btn-theme-s">Join Course</button>
    </div>
</aside>


@code {

    [Parameter]
    public FullCourseModel? Course { get; set; }

}


