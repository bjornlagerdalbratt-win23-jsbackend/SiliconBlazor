<aside class="mt-3 mb-5 course-includes border">
    <div class="container">

        <h4>This course includes:</h4>

        <div class="content mt-3">
            <div class="item">
                <div class="item-icon">
                    <i class="fa-sharp fa-regular fa-video"></i>
                </div>
                <div class="item-content">

                    @if (Course != null && Course?.Content?.Includes != null)
                    {
                        <ul>
                            @foreach (var include in Course.Content.Includes)
                            {
                                <li>@include</li>
                            }
                        </ul>
                    }

                    <div class="pricing">
                        @if (!string.IsNullOrEmpty(Course?.Prices?.Discount.ToString()))
                        {
                            <div class="discount">@Course.Prices.Discount.ToString()</div>
                        }
                        <div class="price @(string.IsNullOrEmpty(Course?.Prices?.Discount.ToString()) ? "" : "discount-enabled")">@Course?.Prices?.Price</div>
                    </div>
                </div>
            </div>

                         

        <button type="submit" class="mt-3 btn btn-theme-s">Join Course</button>
        </div>
    </div>
</aside>


@code {

   // [Parameter]
