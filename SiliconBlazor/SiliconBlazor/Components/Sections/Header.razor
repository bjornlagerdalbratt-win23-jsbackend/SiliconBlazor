<header>
    <div class="container">
        <a id="logo" href="/"><img src="/images/silicon-logo-light_theme.svg" alt=""></a>


        <div id="menu">
            <nav>
                <NavLink href="/">Overview</NavLink>
                <NavLink href="/#features">Features</NavLink>

                <AuthorizeView>
                    <Authorized>
                        <a class="menu-link" href="/courses">Courses</a>
                    </Authorized>
                </AuthorizeView>

                <NavLink href="/contact">Contact</NavLink>

            </nav>
        </div>

        <div class="btn-switch">
            <label>Light</label>
            <label class="switch" for="switch-mode">
                <input type="checkbox" id="switch-mode" />
                <span class="slider round"></span>
            </label>
            <label>Dark</label>
        </div>


        <div class="account-buttons">
            <AuthorizeView>
                <Authorized>
                    <a href="/account/manage"><img src="/uploads/..." /></a>
                </Authorized>
                <NotAuthorized>
                    <a class="btn-gray" href=" /account/login"><i class="fa-regular fa-right-to-bracket"></i><span>Sign in</span></a>
                    <a class="btn-theme" href="/account/register"><i class="fa-regular fa-user"></i><span>Sign Up</span></a>
                </NotAuthorized>
            </AuthorizeView> 
        </div>

        <button onclick="toggleMenu()" class="btn-mobile">
            <i class="fa-regular fa-bars"></i>
        </button>

    </div>
</header>

