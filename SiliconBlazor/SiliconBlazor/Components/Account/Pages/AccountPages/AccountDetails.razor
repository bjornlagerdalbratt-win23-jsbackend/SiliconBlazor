@attribute [StreamRendering]
@using System.Net.Http.Headers
@using SiliconBlazor.Services
@inject HttpClient httpClient
@inject UserProfileManager UserProfileManager
@inject UserAddressManager UserAddressManager
@page "/accountdetails"

<section class="account-details">
    <div class="container">

        <ProfileInfo />

        <div class="content-right">
            <EditForm FormName="basicInfo" method="post" Model="@_viewModel" OnValidSubmit="HandleBasicSubmit" novalidate class="row g-3 needs-validation top-form">
                <h1>Account Details</h1>
                <h5>Basic Info</h5>
                <div class="col-md-6" id="input-group-1">
                    <label id="Firstname" class="form-label">First name</label>
                    <InputText id="Firstname" @bind-Value="user.UserProfile!.FirstName" type="text" class="form-control" placeholder="Enter your first name" required />
                </div>
                <div class="col-md-6" id="input-group-2">
                    <label id="Lastname" class="form-label">Last name</label>
                    <InputText id="Lastname" @bind-Value="user.UserProfile!.LastName" type="text" class="form-control" placeholder="Enter your last name" required />
                </div>
                <div class="col-md-6" id="input-group-3">
                    <label id="Email" class="form-label">Email address</label>
                    <InputText id="Email" @bind-Value="user.Email" type="email" class="form-control" placeholder="Enter your email address" required />
                </div>
                <div class="col-md-6" id="input-group-4">
                    <label id="Phonenumber" class="form-label">Phone</label>
                    <InputText id="Phonenumber" @bind-Value="user.PhoneNumber" type="number" class="form-control" placeholder="Enter your phone" />
                </div>
                <div class="col-12">
                    <label id="Bio" class="form-label">Bio <span>(optional)</span></label>
                    <InputTextArea id="Bio" @bind-Value="user.UserProfile.Bio" type="text" class="form-control" placeholder="Enter a short bio..." rows="5"></InputTextArea>
                </div>
                <div class="buttons">
                    <button type="reset" class="btn-gray">Cancel</button>
                    <button type="submit" class="btn-theme-s">Save changes</button>
                </div>
            </EditForm>

            <EditForm method="post" Model="@_viewModel" OnValidSubmit="HandleAddressSubmit" novalidate class="row g-3 needs-validation bottom-form">
                <h5>Address</h5>
                <div class="col-12" id="input-group-1">
                    <label id="AddressLine1" class="form-label">Address line 1</label>
                    <InputText id="AddressLine1" @bind-Value="user.Address!.AddressLine_1" type="text" class="form-control" placeholder="Enter your address"/>
                </div>
                <div class="col-12" id="input-group-2">
                    <label id="AddressLine2" class="form-label">Address line 2 <span>(optional)</span></label>
                    <InputText id="AddressLine2" @bind-Value="user.Address.AddressLine_2" type="text" class="form-control" placeholder="Enter your second address info"/>
                </div>
                <div class="col-md-6" id="input-group-3">
                    <label id="PostalCode" class="form-label">Postal code</label>
                    <InputText id="PostalCode" @bind-Value="user.Address.PostalCode" type="number" class="form-control" placeholder="Enter your postal code"/>
                </div>
                <div class="col-md-6" id="input-group-4">
                    <label id="City" class="form-label">City</label>
                    <InputText id="City" @bind-Value="user.Address.City" type="text" class="form-control" placeholder="Enter your city" />
                </div>
                <div class="buttons">
                    <button type="reset" class="btn-gray">Cancel</button>
                    <button type="submit" class="btn-theme-s">Save changes</button>
                </div>
            </EditForm>
        </div>
    </div>
</section>

@code {
    private ApplicationUser user = default!;
    private ProfileInfoViewModel _viewModel = new ProfileInfoViewModel();

    [CascadingParameter]
    private HttpContext HttpContext { get; set; } = default!;

    protected override async Task OnInitializedAsync()
    {
        await LoadUserDataAsync();
    }

    private async Task LoadUserDataAsync()
    {
        user = await UserManager.GetUserAsync(HttpContext.User) ?? null!;
        if (user.UserProfileId != null)
        {
            user.UserProfile = await UserProfileManager.GetUserProfileAsync(user.UserProfileId);
        }
        

    }

    private async Task HandleBasicSubmit()
    {

    }

    private async Task HandleAddressSubmit()
    {

    }
}
